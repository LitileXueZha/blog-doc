{
  "Comment": {
    "type": "object",
    "properties": {
      "id": { "$ref": "utils.json#/key/id" },
      "parent_id": {
        "type": "string",
        "description": "关联的文章、留言等 `id`，这里评论独立出来，方便横向扩展",
        "example": "eowuro"
      },
      "name": {
        "type": "string",
        "description": "评论人的名字，可以存于 `localstroge` 中，只在第一次评论弹框输入",
        "example": "滔"
      },
      "content": {
        "type": "string",
        "description": "评论内容",
        "example": "星空在闪烁，是你的眼泪悄悄划过"
      },
      "type": {
        "type": "number",
        "description": "评论类型：0-文章、1-留言。更多暂未定义",
        "example": 1
      },
      "label": {
        "type": "number",
        "description": "用户标签：0-普通用户、1-博主",
        "example": 0
      },
      "parent": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "评论主体 `id`",
            "example": "dasfd"
          },
          "title": {
            "type": "string",
            "description": "文章标题",
            "example": "如何应对绿茶婊？"
          },
          "name": {
            "type": "string",
            "description": "留言人姓名",
            "example": "滔"
          }
        }
      },
      "create_at": { "$ref": "utils.json#/key/create_at" }
    }
  },

  "methods": {
    "get": {
      "tags": ["Comment"],
      "summary": "获取对应评论列表",
      "description": "根据 `parent_id` 获取对应文章、留言等的评论",
      "parameters": [
        {
          "name": "parent_id",
          "in": "query",
          "required": true,
          "description": "关联的文章、留言等 `id`，这里评论独立出来，方便横向扩展",
          "schema": {
            "type": "string",
            "example": "dasfd"
          }
        },
        { "$ref": "utils.json#/parameter/page" },
        { "$ref": "utils.json#/parameter/size" }
      ],
      "responses": {
        "200": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "code": { "$ref": "utils.json#/key/code" },
                  "data": {
                    "type": "object",
                    "properties": {
                      "total": { "$ref": "utils.json#/key/total" },
                      "items": {
                        "type": "array",
                        "items": { "$ref": "#/Comment" }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "default": { "$ref": "utils.json#/response/default" }
      },
      "security": [{ "api_key": [] }]
    },
    "post": {
      "tags": ["Comment"],
      "summary": "创建评论",
      "parameters": [],
      "requestBody": {
        "required": true,
        "description": "创建评论所需要的数据，`parent_id` 必传",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "parent_id": { "$ref": "#/Comment/properties/parent_id" },
                "name": { "$ref": "#/Comment/properties/name" },
                "content": { "$ref": "#/Comment/properties/content" },
                "type": { "$ref": "#/Comment/properties/type" }
              }
            }
          }
        }
      },
      "responses": {
        "200": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "code": { "$ref": "utils.json#/key/code" },
                  "data": { "$ref": "#/Comment" }
                }
              }
            }
          }
        },
        "default": { "$ref": "utils.json#/response/default" }
      },
      "security": [{ "api_key": [] }]
    }
  },

  "single": {
    "put": {
      "tags": ["Comment"],
      "summary": "更新评论",
      "description": "仅管理后台可操作。过滤一些**不合法**内容",
      "parameters": [
        { "$ref": "utils.json#/parameter/id" }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "name": { "$ref": "#/Comment/properties/name" },
                "content": { "$ref": "#/Comment/properties/content" }
              }
            }
          }
        }
      },
      "responses": {
        "200": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "code": { "$ref": "utils.json#/key/code" },
                  "data": { "$ref": "#/Comment" }
                }
              }
            }
          }
        },
        "default": { "$ref": "utils.json#/response/default" }
      },
      "security": [{ "api_key": [] }]
    },
    "delete": {
      "tags": ["Comment"],
      "summary": "删除评论",
      "description": "只有管理后台才能删除某些不合法评论",
      "parameters": [
        { "$ref": "utils.json#/parameter/id" }
      ],
      "responses": {
        "200": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "code": { "$ref": "utils.json#/key/code" },
                  "data": {
                    "type": "object",
                    "nullable": true,
                    "description": "null，返回为一个空对象null",
                    "example": null
                  }
                }
              }
            }
          }
        },
        "default": { "$ref": "utils.json#/response/default" }
      },
      "security": [{ "api_key": [] }]
    }
  },

  "all": {
    "get": {
      "tags": ["Comment"],
      "summary": "获取评论列表（管理后台可用）",
      "description": "查询全部评论列表，并可根据状态筛选",
      "parameters": [
        { "$ref": "utils.json#/parameter/page" },
        { "$ref": "utils.json#/parameter/size" },
        { "$ref": "utils.json#/parameter/filter" },
        {
          "name": "type",
          "in": "query",
          "description": "评论类型：0-文章、1-留言。更多暂未定义",
          "schema": {
            "type": "number",
            "example": 0
          }
        }
      ],
      "responses": {
        "200": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "code": { "$ref": "utils.json#/key/code" },
                  "data": {
                    "type": "object",
                    "properties": {
                      "total": { "$ref": "utils.json#/key/total" },
                      "items": {
                        "type": "array",
                        "items": { "$ref": "#/Comment" }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "default": { "$ref": "utils.json#/response/default" }
      },
      "security": [{ "api_key": [] }]
    }
  }
}