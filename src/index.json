{
  "openapi": "3.0",
  
  "info": {
    "title": "博客文档",
    "description": "这是一个基于[SwaggerUI](https://swagger.io/specification/#oasObject)的文档",
    "version": "1.0.0"
  },

  "servers": [
    {
      "url": "{schemes}://api.ningtaostudy.cn/{basePath}",
      "description": "API服务器地址",
      "variables": {
        "schemes": {
          "enum": ["https", "http"],
          "default": "https"
        },
        "basePath": {
          "default": "v1"
        }
      }
    }
  ],

  "tags": [
    { "name": "Article", "description": "与文章相关的一系列接口" },
    { "name": "Comment", "description": "评论，有文章的，也有留言板的" },
    { "name": "Msg", "description": "留言板" }
  ],

  "paths": {
    "/articles": {
      "$ref": "article.json#/methods"
    },
    "/articles/{id}": {
      "$ref": "article.json#/single"
    }
  },

  "components": {
    "securitySchemes": {
      "api_key": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header",
        "default": "xx",
        "description": "请求头，用以简单认证API权限，每次发送都应该带上它"
      }
    },

    "schemas": {
      "Article": {
        "$ref": "article.json#/Article"
      }
    }
  }
}